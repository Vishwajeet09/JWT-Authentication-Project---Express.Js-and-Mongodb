<%- include('./partial/header.ejs') %>

            <div class="mx-2">
                <h2 class="alert alert-secondary text-center my-3">List of Candidate</h2>
                <table class="table table-striped table hover">
                    <thead>
                        <tr>
                            <th scope="col">No.</th>
                            <th scope="col">Name</th>
                            <th scope="col">Email</th>
                            <th scope="col">Contact No.</th>
                            <th scope="col">Age</th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% let i = 0 %>
                        <% data.forEach((item) => { %>
                            <tr>
                                <td><%= ++i %></td>
                                <td><%= item.name%></td>
                                <td><%= item.email%></td>
                                <td><%= item.phoneNumber%></td>
                                <td><%= item.age%></td>
                                <td class="d-flex">
                                    <form method="get" action="./edit/<%= item._id%>" class="d-inline">
                                        <button type="submit" class="btn"><i class="fas fa-pen-square text-info"></i></button>    
                                    </form>

                                    <form method="post" action="./delete/<%= item._id%>" class="d-inline">
                                        <button type="submit" class="btn"><i class="fas fa-trash text-danger"></i></button>    
                                        </form>
                                    
                                </td>
                            </tr>
                        <%})%>
                        
                    </tbody>

                </table>
                <a href="/addInfo">+Add new candidate</a>
                <br>
                <br>
                <form method="get" action="/logOut">
                    <button type="submit" class="btn btn-primary" href="/logOut">Log Out</button>
                </form>
            </div>
            

        
    

<%- include('./partial/footer.ejs') %>
